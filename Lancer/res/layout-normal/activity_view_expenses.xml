<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
    
    
  <!--  Navigation -->
    
    <View android:id="@+id/nav_list_bg" 
 	    android:background="@color/lancer_blue"
 		android:layout_width="fill_parent"
 		android:layout_alignParentTop="true"
 		android:layout_height="55dp"
 		android:layout_centerVertical ="true"
 		/>
	
	<TextView
        android:id="@+id/jobs_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="@string/jobs"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:onClick="" /> <!-- To Jobs List -->

    <TextView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/jobs_list"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:text="@string/arrow"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/job_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/arrow"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="@string/job"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:onClick="" /> <!-- To Job Options List -->
    
    <TextView
        android:id="@+id/arrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/job_name"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:text="@string/arrow"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/job_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/arrow2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="@string/tasks"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:onClick="" /> <!-- To Tasks List -->
    

        
        <!-- page content below -->
    
    
    <TextView
        android:id="@+id/ExpenseItemDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/nav_list_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="20dp"
        android:text="Red Wiring"
        android:textColor="@color/lancer_blue"
        android:textSize="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/ExpenseCostDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ExpenseItemDisplay"
        android:layout_alignBottom="@+id/ExpenseItemDisplay"
       
        android:layout_alignParentRight="true"
        android:textColor="@color/lancer_blue"
        android:layout_marginRight="20dp"
        android:text="€38.50"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <View android:id="@+id/separator" 
 	    android:background="@color/lancer_blue"
 		android:layout_width = "fill_parent"
 		android:layout_below="@+id/ExpenseItemDisplay"
 		android:layout_height="0.5dp"
 		android:layout_marginTop="10dp"
 		android:layout_marginLeft="20dp"
 		android:layout_marginRight="20dp"
 		android:layout_centerVertical ="true"
 		/>
    
    
        <TextView
        android:id="@+id/Cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ExpenseItemDisplay"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="20dp"
        android:text="Cost"
        android:textColor="@color/lancer_blue"
        android:textSize="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/IndividualCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Cost"
        android:layout_alignBottom="@+id/Cost"
        android:layout_alignParentRight="true"
        android:textColor="@color/lancer_blue"
        android:layout_marginRight="20dp"
        android:text="€38.50"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
    
    
          <TextView
        android:id="@+id/Quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Cost"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="20dp"
        android:text="Quantity"
        android:textColor="@color/lancer_blue"
        android:textSize="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/ItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Quantity"
        android:layout_alignBottom="@+id/Quantity"
        android:layout_alignParentRight="true"
        android:textColor="@color/lancer_blue"
        android:layout_marginRight="20dp"
        android:text="€38.50"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
    
    
              <TextView
        android:id="@+id/Task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Quantity"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="20dp"
        android:text="Task"
        android:textColor="@color/lancer_blue"
        android:textSize="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/TaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Task"
        android:layout_alignBottom="@+id/Task"
        android:layout_alignParentRight="true"
        android:textColor="@color/lancer_blue"
        android:layout_marginRight="20dp"
        android:text="€38.50"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</RelativeLayout>
