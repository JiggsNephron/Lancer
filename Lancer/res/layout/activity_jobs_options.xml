<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <View android:id="@+id/nav_list_bg" 
 	    android:background="@color/lancer_blue"
 		android:layout_width = "fill_parent"
 		android:layout_alignParentTop="true"
 		android:layout_height="55dp"
 		android:layout_centerVertical ="true"
 		/>
    

    <Button
        android:id="@+id/Tasks"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nav_list_bg"
        android:textColor="@color/lancer_blue"
        android:textSize="30dp"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:paddingBottom="10dp" 
        android:onClick="viewTasks"
        android:text="@string/tasks" />
    
    <View android:id="@+id/separator1" 
 	    android:background="@color/lancer_blue"
 		android:layout_width = "fill_parent"
 		android:layout_below="@+id/Tasks"
 		android:layout_height="0.5dp"
 		android:layout_marginTop="25dp"
 		android:layout_marginLeft="20dp"
 		android:layout_marginRight="20dp"
 		android:layout_centerVertical ="true"
 		/>
    

        <Button
        android:id="@+id/Expenses"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/separator1"
        android:textColor="@color/lancer_blue"
        android:textSize="30dp"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:paddingBottom="10dp" 
        android:onClick="viewExpences"
        android:text="@string/expenses" />

    
    <View android:id="@+id/separator2" 
 	    android:background="@color/lancer_blue"
 		android:layout_width = "fill_parent"
 		android:layout_below="@+id/Expenses"
 		android:layout_height="0.5dp"
 		android:layout_marginTop="25dp"
 		android:layout_marginLeft="20dp"
 		android:layout_marginRight="20dp"
 		android:layout_centerVertical ="true"
 		/>
    

            <Button
        android:id="@+id/Notes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/separator2"
        android:textColor="@color/lancer_blue"
        android:textSize="30dp"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:paddingBottom="10dp" 
        android:onClick="viewNotes"
        android:text="@string/notes" />
    
    <Button
        android:id="@+id/create_invoice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:background="@color/lancer_blue"
        android:paddingBottom="10dp" 
        android:onClick="createInvoice"
        android:text="@string/create_invoice" />

    <TextView
        android:id="@+id/jobs_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="@string/jobs"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:onClick="" />

    <TextView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/jobs_list"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:text="@string/arrow"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/job_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/arrow"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="@string/job_name"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</RelativeLayout>
