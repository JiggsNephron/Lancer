<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/settings_heading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/lancer_blue"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="25dp"
        android:text="@string/title_activity_settings" />
    <TextView 
        android:id="@+id/job_order_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/job_order_label"
        android:textColor="@color/lancer_blue"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_below="@id/settings_heading" />
    <RadioGroup
        android:id="@+id/job_order_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_order_label"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" >
 
        <RadioButton
            android:id="@+id/order_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lancer_blue"
            android:text="@string/order_none"
            android:checked="true" />
 
        <RadioButton
            android:id="@+id/order_alpha_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lancer_blue"
            android:text="@string/order_alpha_asc" />
        
        <RadioButton
            android:id="@+id/order_alpha_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lancer_blue"
            android:text="@string/order_alpha_desc" />
 
        <RadioButton
            android:id="@+id/order_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lancer_blue"
            android:text="@string/order_deadline" />
    </RadioGroup>
    
    <Button
        android:id="@+id/settings_save_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/button_save"
        android:onClick="saveSettings"
        android:background="@color/lancer_blue"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textSize="25dp" />
   

</RelativeLayout>
