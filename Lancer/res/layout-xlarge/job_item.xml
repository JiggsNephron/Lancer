<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/JobNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:text="Update Server"
        android:textColor="@color/lancer_blue"
        android:textSize="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/JobCompletionDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/JobNameDisplay"
        android:paddingTop="5dp"
        android:layout_alignBottom="@+id/JobNameDisplay"
        android:layout_alignParentRight="true"
        android:textColor="@color/lancer_blue"
        android:layout_marginRight="20dp"
        android:text="65%"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/JobLocationDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/JobNameDisplay"
        android:layout_below="@+id/JobNameDisplay"
        android:layout_marginTop="10dp"
        android:textColor="@color/lancer_blue"
        android:text="No Location Set"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/JobDateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/JobLocationDisplay"
        android:layout_alignBottom="@+id/JobLocationDisplay"
        android:layout_alignParentRight="true"
        android:textColor="@color/lancer_blue"
        android:layout_marginRight="25dp"
        android:text="Deadline"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <View android:id="@+id/separator" 
 	    android:background="@color/lancer_blue"
 		android:layout_width = "fill_parent"
 		android:layout_below="@+id/JobLocationDisplay"
 		android:layout_height="0.5dp"
 		android:layout_marginTop="10dp"
 		android:layout_marginLeft="20dp"
 		android:layout_marginRight="20dp"
 		android:layout_centerVertical ="true"
 		/>

    <TextView
        android:id="@+id/JobDoneDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/JobLocationDisplay"
        android:layout_alignRight="@+id/JobCompletionDisplay"
        android:layout_marginRight="25dp"
        android:text="DONE"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/lancer_blue"
        android:textSize="10dp" />
        
</RelativeLayout>